<div class='chatroom-wrapper'>
  <div class='users-chatrooms-list'>
    <div class='scrollable'>
      <%= render partial: 'users_chatrooms' %>
    </div>
  </div>

  <div class='active-chatroom'>
    <h1 class='chatroom-names'>
      <% if current_user != @chatroom.friendship.user %>
        <%= @chatroom.friendship.user.first_name %> <%= @chatroom.friendship.user.last_name %>
      <% else %>
        <%= @chatroom.friendship.friend.first_name %> <%= @chatroom.friendship.friend.last_name %>
      <% end %>
    </h1>

    <div class='messages-wrapper'>
      <div class='panel-body scrollable' id='messages'>
        <%= render partial: 'messages/message', collection: @chatroom.messages.order(:id)%>
      </div>
    </div>

    <div class='message-form'>
      <%= render partial: 'messages/message_form', locals: { message: @message, chatroom: @chatroom }%>
    </div>
  </div>
</div>
