
<main id=welcome-login>

  <input id="tab1" class="signup-tab" type="radio" name="tabs" checked>
  <label for="tab1" class="welcome">Signup</label>
  <input id="tab2" class="signup-tab" type="radio" name="tabs">
  <label for="tab2" class="welcome">Register</label>

  <section class="welcome-tabs" id="content1">
    <div>
      <%= form_for :user, url: '/users' do |f| %>
      <span class='form-field-input'> <%= f.text_field :first_name, placeholder: 'First Name'%></span>
      <span class='form-field-input'> <%= f.text_field :last_name, placeholder: 'Last Name' %></span>
      <span class='form-field-input'> <%= f.text_field :email, placeholder: 'Email' %></span>
      <span class='form-field-input'> <%= f.password_field :password, placeholder: 'Password'%></span>
      <span class='form-field-input'> <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation' %></span>
      <%= f.submit 'Submit', class: 'form-button' %>
    <% end %>
    </div>
  </section>

  <section class="welcome-tabs" id="content2">
    <div>
    <%= form_tag '/login' do %>
      <span class='form-field-input'> <%= text_field_tag(:email, '', placeholder: 'Email') %></span>
      <span class='form-field-input'> <%= password_field_tag(:password, '', placeholder: 'Password') %></span>
      <%= submit_tag 'Submit', class: 'form-button' %>
    <% end %>
  </div>
  </section>


</main>

