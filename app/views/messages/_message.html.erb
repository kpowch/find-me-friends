<% if current_user.first_name == message.user.first_name %>
  <div class='message-bubble currentUser'>
    <p><%= message.user.first_name %>: <%= message.content %></p>
  </div>
<% else %>
  <div class='message-bubble'>
    <p><%= message.user.first_name %>: <%= message.content %></p>
  </div>
<% end %>
