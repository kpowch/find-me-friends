<div class='navbar-wrapper'>
  <div class='navbar'>
    <div class='logo'>
      <h1><%= link_to 'Find Me Friends', :root %></h1>
    </div>

    <div class='navbar-right'>

      <!-- TODO: make this a button with no border or background, then link to 'how it works' section -->
      <!-- TODO only show if on welcome page -->
      <div class='navbar-item button button-hover'>
        <span>HOW IT WORKS</span>
      </div>
        <% if current_user %>

          Signed in as <%= current_user.first_name %> <%= current_user.last_name %>

          <%= link_to '/logout' do %>
            <div class='navbar-item button outlined button-hover'>
              <span>Logout</span>
            </div>
          <% end %>

        <% else %>

          <%= link_to new_user_path do %>
            <div class='navbar-item button filled button-hover'>
              <span>Signup!</span>
            </div>
          <% end %>

          <%= link_to '/login' do %>
            <div class='navbar-item button outlined button-hover'>
              <span>Login</span>
            </div>
          <% end %>

        <% end %>

    </div>
  </div>
</div>
